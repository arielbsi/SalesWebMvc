@model SalesWebMvc.Models.ViewModels.FuncionarioFormViewModel
@{
    ViewData["Title"] = "Create";
}

<h2>@ViewData["Title"]</h2>

<h4>Funcionário</h4>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Funcionario.Nome" class="control-label"></label>
                <input asp-for="Funcionario.Nome" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Funcionario.Email" class="control-label"></label>
                <input asp-for="Funcionario.Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Funcionario.Nascimento" class="control-label"></label>
                <input asp-for="Funcionario.Nascimento" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Funcionario.BaseSalarial" class="control-label"></label>
                <input asp-for="Funcionario.BaseSalarial" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Funcionario.DepartamentoId" class="control-label"></label>
                <select asp-for="Funcionario.DepartamentoId" asp-items="@(new SelectList(Model.Departamentos,"Id",
                "Nome"))" class="form-control"></select>
            </div>

            <div class="form-group">


                <input type="submit" value="Cadastrar" class="btn btn-defaut" />
            </div>



        </form>




    </div>



</div>