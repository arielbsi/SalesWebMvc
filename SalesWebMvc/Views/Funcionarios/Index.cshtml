@model IEnumerable<SalesWebMvc.Models.Funcionario>
@{
    ViewData["Title"] = "Funcionario";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-defaut">Criar Novo Funcionário</a>

</p>

<table class="table table-striped table-hover">
    <thead>

        <tr class="success">
            <th>@Html.DisplayNameFor(model => model.Nome)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>@Html.DisplayNameFor(model => model.Nascimento)</th>
            <th>@Html.DisplayNameFor(model => model.BaseSalarial)</th>
            <th></th>
            <th></th>
            <th></th>
      
        </tr>
    

    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@Html.DisplayFor(modelItem => item.Nascimento)</td>
                <td>@Html.DisplayFor(modelItem => item.BaseSalarial)</td>
                <td><a asp-action="Editarrr" asp-route-id="@item.Id">Editarr</a></td>
                <td><a asp-action="Detalhee" asp-route-id="@item.Id">Detalhee</a></td>
                <td><a asp-action="Deletar" asp-route-id="@item.Id">Deletarr</a></td>
            </tr>


        }

    </tbody>


</table>

